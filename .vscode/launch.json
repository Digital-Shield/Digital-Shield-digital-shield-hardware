{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HeaderTool Debug",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/core",
      "program": "./tools/headertool.py",
      "console": "integratedTerminal",
      "args": ["-h", "build/bootloader/bootloader.bin", "-D"]
    },
    {
      "name": "Boardloader Debug",
      "cwd": "${workspaceFolder}",
      "executable": "./core/build/boardloader/boardloader.elf",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "servertype": "stlink"
    },
    {
      "name": "Bootloader Debug",
      "cwd": "${workspaceFolder}",
      "executable": "./core/build/bootloader/bootloader.elf",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "servertype": "stlink"
    },
    {
      "name": "firmware Debug",
      "cwd": "${workspaceFolder}",
      "executable": "./core/build/firmware/firmware.elf",
      "request": "attach",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "servertype": "stlink"
    }
  ]
}
